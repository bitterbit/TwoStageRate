<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">
    <ImageView
        android:id="@+id/ivAppIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/btn_star_big_on" />
    <TextView
        android:id="@+id/tvRatePromptTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:textColor="@color/dialog_title_text_color"
        />

    <RatingBar
        android:id="@+id/rbRatePromptBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_gravity="center_horizontal"
        />
    <RelativeLayout
        android:id="@+id/llButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">


    <TextView
        android:id="@+id/tvRatePromptSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:enabled="false"
        android:text="Submit"
        android:textColor="@color/rate_prompt_button_disabled_color"
        android:textSize="@dimen/text_size_medium"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        />

    </RelativeLayout>

</LinearLayout>